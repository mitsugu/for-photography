#! /bin/sh
rm "$1.txt"
echo '' > "$1.txt"
echo '﻿' >> "$1.txt"
echo '﻿' >> "$1.txt"
echo '﻿' >> "$1.txt"
echo `exiftool $1 | grep 'Modify Date                     :'`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep 'Date/Time Original              :'`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep 'Create Date                     :'`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep 'Profile Date Time               :'`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "Camera Model Name               :"`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "ISO                             :"`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "Exposure Time                   :"`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "F Number                        :"`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "Exposure Program                :"`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "Software                        :"`'﻿' >>  "$1.txt"
echo '﻿' >> "$1.txt"
echo '#OLYMPUS #CAMEDIA #﻿' >> "$1.txt"
