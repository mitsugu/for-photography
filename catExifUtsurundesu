#! /bin/sh
rm "$1.txt"
echo '' > "$1.txt"
echo '﻿' >> "$1.txt"
echo '﻿' >> "$1.txt"
echo '﻿' >> "$1.txt"
echo `exiftool $1 | grep "Date/Time Original              :"`'﻿' >>  "$1.txt"
echo 'Camera : FUJIFILM Utsurundesu ( QuickSnap Simple Ace )﻿' >> "$1.txt"
echo `exiftool $1 | grep "ISO                             :"`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "F Number                        :"`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "Exposure Time                   :"`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "User Comment                    :"`'﻿' >>  "$1.txt"
echo `exiftool $1 | grep "Software                        :"`'﻿' >>  "$1.txt"
echo '﻿' >> "$1.txt"
echo '#FUJIFILM #UtsurundesuSimpleAce #QuickSnapSimpleAce #﻿' >>  "$1.txt"
